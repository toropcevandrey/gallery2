<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:theme="@style/Theme.MaterialComponents.Light.NoActionBar">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_feed"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent">
        
        <androidx.cardview.widget.CardView
            android:layout_marginHorizontal="16dp"
            android:layout_width="match_parent"
            android:layout_marginVertical="10dp"
            android:layout_height="match_parent"
            android:elevation="0dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="10dp">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/search_background"
            android:drawableStart="@drawable/ic_search"
            android:hint="@string/search"
            android:textColor="@color/black"
            android:textColorHint="@color/search_text"
            android:textSize="17sp" />
        </androidx.cardview.widget.CardView>

    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tb_feed"
        app:tabIndicatorColor="@color/purple"
        app:tabIndicatorHeight="2dp"
        app:tabSelectedTextColor="@color/black"
        app:tabTextAppearance="@style/MyCustomTextAppearance"
        app:tabTextColor="@color/main_gray"
        app:textAllCaps="false" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="35dp"
        android:backgroundTint="@color/main_gray"
        app:borderWidth="0dp"
        android:src="@drawable/ic_camera"
        app:layout_constraintBottom_toBottomOf="@id/pager"
        app:layout_constraintEnd_toEndOf="@id/pager"
        android:contentDescription="@string/add_photo" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tab_layout" />
</androidx.constraintlayout.widget.ConstraintLayout>