<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivBottomDialogCam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/ic_bottom_camera"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/camera"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/ivBottomDialogCam"
        app:layout_constraintStart_toStartOf="@+id/ivBottomDialogCam"
        app:layout_constraintTop_toBottomOf="@+id/ivBottomDialogCam" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivBottomDialogFolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/ic_bottom_folder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/gallery"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/ivBottomDialogFolder"
        app:layout_constraintStart_toStartOf="@+id/ivBottomDialogFolder"
        app:layout_constraintTop_toBottomOf="@+id/ivBottomDialogFolder" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="50dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/ivBottomDialogFolder" />

</androidx.constraintlayout.widget.ConstraintLayout>